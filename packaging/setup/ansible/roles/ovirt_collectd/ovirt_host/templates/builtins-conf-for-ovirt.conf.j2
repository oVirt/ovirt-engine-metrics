# The following are added to retrieve additional host info

LoadPlugin disk
LoadPlugin cpu
LoadPlugin memory
LoadPlugin load
LoadPlugin virt
LoadPlugin nfs
LoadPlugin entropy
LoadPlugin swap
LoadPlugin df
LoadPlugin interface
LoadPlugin aggregation
LoadPlugin processes

<Plugin cpu>
        ReportByState true
        ReportByCpu true
        ValuesPercentage true
</Plugin>

<Plugin memory>
        ValuesAbsolute true
        ValuesPercentage true
</Plugin>

<Plugin df>
       # ignore rootfs; else, the root file-system would appear twice, causing
       # one of the updates to fail and spam the log
        FSType rootfs
       # ignore the usual virtual / temporary file-systems
        FSType sysfs
        FSType proc
        FSType devtmpfs
        FSType devpts
        FSType tmpfs
        FSType fusectl
        FSType cgroup
        IgnoreSelected true
        ValuesAbsolute true
        ValuesPercentage true
</Plugin>

<Plugin aggregation>
   <Aggregation>
     Plugin "cpu"
     Type "percent"

     GroupBy "Host"
     GroupBy "TypeInstance"

     CalculateSum true
     CalculateAverage true
   </Aggregation>
</Plugin>

<Plugin processes>
     Process "fluentd"
     Process "collectd"
     ProcessMatch "libvirt" "/usr/sbin/libvirtd --listen"
     ProcessMatch "qemu" "/usr/libexec/qemu-kvm"
     ProcessMatch "vdsmd" "/usr/bin/python2 /usr/share/vdsm/vdsm"
</Plugin>
